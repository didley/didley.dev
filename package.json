{
  "scripts": {
    "dev": "cross-env NODE_ENV=development tailwindcss -i ./src/input.css -o ./dist/output.css",
    "prod": "cross-env NODE_ENV=production tailwindcss -i ./src/input.css -o ./dist/output.css",
    "start": "npm run serve",
    "serve:build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "serve:watch": "live-server ./src --browser='brave browser'",
    "serve": "cross-env NODE_ENV=development run-p serve:*"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^7.0.2",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.23"
  }
}
